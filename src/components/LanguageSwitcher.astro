---
import type { Lang } from "../lib/i18n";

const languages: Lang[] = ["es", "en", "da"];

const currentPath = Astro.url.pathname;
---

<div class="language-switcher">
  {languages.map((lang) => {
    const newPath = currentPath.replace(/^\/(es|en|da)/, `/${lang}`);
    return (
      <a href={newPath}>{lang.toUpperCase()}</a>
    );
  })}
</div>

