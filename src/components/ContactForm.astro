---
interface Props {
  title: string;
  text: string;
  button: string;
}

const { title, text, button } = Astro.props as Props;
---

<section id="contact" class="contact-section">
  <div class="contact-wrapper">
    <h2>{title}</h2>
    <p>{text}</p>

    <form method="POST" action="#">
      <div class="form-group">
        <input type="text" name="name" placeholder="Name" required />
      </div>

      <div class="form-group">
        <input type="email" name="email" placeholder="Email" required />
      </div>

      <div class="form-group">
        <textarea
          name="message"
          placeholder="Message"
          rows="5"
          required
        ></textarea>
      </div>

      <button type="submit">{button}</button>
    </form>
  </div>
</section>

<style>
.contact-section {
  padding: 4rem 2rem;
  border-top: 1px solid #eee;
}

.contact-wrapper {
  max-width: 700px;
  margin: 0 auto;
}

.form-group {
  margin-bottom: 1rem;
}

input,
textarea {
  width: 100%;
  padding: 0.8rem;
  border: 1px solid #ccc;
}

button {
  padding: 0.9rem 1.5rem;
  cursor: pointer;
}
</style>
