---
interface Props {
  button?: string;
  sendingLabel?: string;
  successMessage?: string;

  /* i18n placeholders / labels (opcionales) */
  nameLabel?: string;
  namePlaceholder?: string;
  emailLabel?: string;
  emailPlaceholder?: string;
  phoneLabel?: string;
  phonePlaceholder?: string;
  messageLabel?: string;
  messagePlaceholder?: string;
}

const {
  button = "Send message",
  sendingLabel = "Sender...",
  successMessage = "Tak! Din besked er sendt.",
  nameLabel = "Name",
  namePlaceholder = "Name",
  emailLabel = "Email",
  emailPlaceholder = "Email",
  phoneLabel = "Telefon",
  phonePlaceholder = "Telefon",
  messageLabel = "Message",
  messagePlaceholder = "Message",
} = Astro.props as Props;
---

<form method="POST" action="#" class="contact-form">
  <div class="contact-row">
    <label class="sr-only" for="contact-name">{nameLabel}</label>
    <input
      id="contact-name"
      type="text"
      name="name"
      placeholder={namePlaceholder}
      autocomplete="name"
      required
    />

    <label class="sr-only" for="contact-email">{emailLabel}</label>
    <input
      id="contact-email"
      type="email"
      name="email"
      placeholder={emailPlaceholder}
      autocomplete="email"
      inputmode="email"
      required
    />
  </div>

  <label class="sr-only" for="contact-phone">{phoneLabel}</label>
  <input
    id="contact-phone"
    type="tel"
    name="phone"
    placeholder={phonePlaceholder}
    autocomplete="tel"
    inputmode="tel"
    class="contact-phone-input"
  />

  <label class="sr-only" for="contact-message">{messageLabel}</label>
  <textarea
    id="contact-message"
    name="message"
    placeholder={messagePlaceholder}
    rows="6"
    required
  ></textarea>

  <div class="contact-actions">
    <button class="button-primary" type="submit" id="contact-submit-btn">{button}</button>
    <p class="contact-status" id="contact-status" aria-live="polite"></p>
  </div>
</form>

<script define:vars={{ scriptUrl: import.meta.env.PUBLIC_GOOGLE_SCRIPT_URL, sendingText: sendingLabel, successText: successMessage, buttonText: button }}>
  const form = document.querySelector('.contact-form');
  const btn = document.getElementById('contact-submit-btn');
  const statusEl = document.getElementById('contact-status');

  if (form && btn && statusEl && scriptUrl) {
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      btn.disabled = true;
      btn.textContent = sendingText;
      statusEl.textContent = '';
      statusEl.className = 'contact-status';

      const formData = {
        type: 'contact',
        name: form.querySelector('[name="name"]')?.value ?? '',
        email: form.querySelector('[name="email"]')?.value ?? '',
        phone: form.querySelector('[name="phone"]')?.value ?? '',
        message: form.querySelector('[name="message"]')?.value ?? '',
      };

      try {
        await fetch(scriptUrl, {
          method: 'POST',
          mode: 'no-cors',
          headers: { 'Content-Type': 'text/plain;charset=utf-8' },
          body: JSON.stringify(formData),
        });
        // Med no-cors er svaret 'opaque' – vi kan ikke læse body. Antager succes hvis fetch gennemføres.
        statusEl.textContent = successText;
        statusEl.className = 'contact-status success';
        form.reset();
      } catch (err) {
        statusEl.textContent = 'Der opstod en fejl. Prøv venligst igen.';
        statusEl.className = 'contact-status error';
      } finally {
        btn.disabled = false;
        btn.textContent = buttonText;
      }
    });
  }
</script>

<style>
  /* Form-only styles: no section background, no container, no heading */
  .contact-form {
    max-width: 860px;
    margin: 0 auto;
    padding: 0;
    border: 0;
    border-radius: 0;
    background: transparent;
    text-align: left;
  }

  .contact-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0.9rem;
    margin-bottom: 0.9rem;
  }

  .contact-phone-input {
    margin-bottom: 0.9rem;
  }

  input,
  textarea {
    width: 100%;
    padding: 0.85rem 0.9rem;
    border-radius: var(--radius);
    border: 1px solid rgba(255, 255, 255, 0.14);
    background: rgba(0, 0, 0, 0.15);
    color: rgba(255, 255, 255, 0.92);
    outline: none;
    font-family: inherit;
    font-size: 1rem;
  }

  input::placeholder,
  textarea::placeholder {
    color: rgba(255, 255, 255, 0.45);
    font-family: inherit;
    font-size: inherit;
  }

  textarea {
    resize: vertical;
    min-height: 140px;
  }

  .contact-actions {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    margin-top: 1rem;
  }

  .contact-status {
    margin: 0;
    font-size: 0.9rem;
  }
  .contact-status.success {
    color: #4ade80;
  }
  .contact-status.error {
    color: #f87171;
  }

  /* Accessibility */
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  @media (max-width: 900px) {
    .contact-row {
      grid-template-columns: 1fr;
    }
  }
</style>