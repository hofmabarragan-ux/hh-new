---
const {
  title,
  items = []
} = Astro.props;
---

<section class="services">
  <h2>{title}</h2>

  <ul>
    {items.map(item => (
      <li>
        <strong>{item.title}</strong>
        {item.description && <p>{item.description}</p>}
      </li>
    ))}
  </ul>
</section>

<style>
.services {
  padding: 4rem 2rem;
}

.services ul {
  list-style: none;
  padding: 0;
}

.services li {
  margin-bottom: 1.5rem;
}
</style>


