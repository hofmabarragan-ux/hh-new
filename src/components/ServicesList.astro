---
interface Item {
  title: string;
  text: string;
}

interface Props {
  items: Item[];
}

const { items } = Astro.props as Props;
---

<section class="services-list" aria-label="Services list">
  <div class="container">
    <div class="services-grid">
      {items.map((item) => (
        <article class="service-card">
          <h3 class="service-title">{item.title}</h3>
          <p class="service-text">{item.text}</p>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .services-list {
    padding: 4rem 0;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 1rem;
    align-items: stretch;
  }

  .service-card {
    background: #fff;
    border: 1px solid rgba(0, 0, 0, 0.07);
    border-radius: 14px;
    padding: 1.25rem;
    box-shadow: 0 10px 28px rgba(0, 0, 0, 0.04);
  }

  .service-title {
    margin: 0 0 0.5rem 0;
  }

  .service-text {
    margin: 0;
  }

  @media (max-width: 900px) {
    .services-list {
      padding: 3rem 0;
    }
    .services-grid {
      grid-template-columns: 1fr;
    }
  }
</style>